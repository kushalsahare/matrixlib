
#include <gtest/gtest.h>
#include <matrixlib.h>
#include <cstdlib>

TEST(MyMatrix, Constructor) {
  MyMatrix<int> A(2, 2, 1);
}

TEST(MyMatrix, transpose) {

MyMatrix<int> A(2, 2, 1);

for (int i=0; i< A.get_rows() ; i++){
for (int j=0; j< A.get_cols(); j++){

A(i,j) = rand()%10+1;
}

}

MyMatrix B = ~A;

for (int i=0; i< A.get_rows() ; i++){
for (int j=0; j< A.get_cols(); j++){

A(i,j) = rand()%10+1;
}

}

for (int i = 0; i < A.get_rows(); i++) {
 for(int j =0; j < A.get_rows(); j++)
  EXPECT_EQ(A(i,j), B(j,i)) << "Matrix A and B differ at index " << i << " " << j;
}


}
}


TEST(Decay, EToGTrace) {
  Decay d(0, 1, 0.2);
  CheckLindbladTraceProperty(d, 2);
}

TEST(Decay, EToGHermiticity) {
  Decay d(0, 1, 0.2);
  CheckLindbladHermiticityProperty(d, 2);
}
